@model ModelPlain.EF.LOAIGHE

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<section class="content pt-2">
    <div class="container-fluid">
        <div class="row">
            <!-- left column -->
            <div class="col-md-6">
                <!-- general form elements -->
                <div class="card card-info">
                    <div class="card-header">
                        <h3 class="card-title">Sửa Loại Ghế</h3>
                    </div>
                    <!-- /.card-header -->
                    <!-- form start -->
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()
                          @Html.HiddenFor(model => model.MA_LOAIGHE)
                        <div class="card-body">
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <div class="form-group">
                                <label>Tên Loại Ghế</label>
                                @Html.EditorFor(model => model.TEN_LOAIGHE, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.TEN_LOAIGHE, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                <label>Phần tram giá</label>
                                @Html.EditorFor(model => model.PHANTRAMGIA_LOAIGHE, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.PHANTRAMGIA_LOAIGHE, "", new { @class = "text-danger" })
                            </div>                            
                        </div>
                        <div class="card-footer">
                            <button type="submit" class="btn btn-infor">Cập Nhật</button>
                            @Html.ActionLink("Trở về", "Index")
                        </div>
                    }
                </div>
            </div>
            </div>
        </div>
    </section>