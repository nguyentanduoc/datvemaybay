@model ModelPlain.EF.KHACHHANG

@{
    ViewBag.Title = "ThemKhachHang";
    Layout = "~/Views/Shared/_LayoutKH.cshtml";
}
<div class="pt-5">
    <div class="row">
        <div class="col-md-4 offset-4">
            <h4 class="text-center pb-2">Nhập Thông Tin Xác Nhận</h4>
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    <label>Họ Và Tên:</label>
                    @Html.EditorFor(model => model.TEN_KHACHHANG, new { htmlAttributes = new { @class = "form-control", @required = "required", @placeholder="Nhập Họ Tên" } })
                    @Html.ValidationMessageFor(model => model.TEN_KHACHHANG, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    <label>Số điện thoại</label>
                    @Html.EditorFor(model => model.SDT_KHACHHANG, new { htmlAttributes = new { @class = "form-control", @required = "required", @placeholder="Nhập số điện thoại" } })
                    @Html.ValidationMessageFor(model => model.SDT_KHACHHANG, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    <label>Email</label>
                    @Html.EditorFor(model => model.EMAIL_KHACHHANG, new { htmlAttributes = new { @class = "form-control", @required = "required", @placeholder="Nhập Email", @type = "email" } })
                    @Html.ValidationMessageFor(model => model.EMAIL_KHACHHANG, "", new { @class = "text-danger" })

                </div>
                <div class="form-group">
                    <label class="pr-4">Giới tính</label>                   
                    @Html.RadioButtonFor(model => model.GIOITINH_KHACHHANG, "True")
                    Nam
                    @Html.RadioButtonFor(model => model.GIOITINH_KHACHHANG, "False")
                    Nữ
                </div>
                <div class="form-group">
                    Mật Khẩu Đăng Nhập
                    <div class="checkbox">
                        @Html.Password("MatKhau", "", new { @required = "required", @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    <div style="float:right;">
                        <input type="submit" value="Tiếp Tục" class="btn btn-default" />
                    </div>
                </div>
                <div>
                    <a href="~/Home">Về Trang Chủ</a>
                </div>
            }
        </div>
    </div>


</div>
